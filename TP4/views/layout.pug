doctype html
html(lang='fr')
	head
		block head
			meta(charset='UTF-8')
			title= title
			link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
			link(rel='stylesheet', type='text/css', href='./assets/css/style.css')
			script(type='text/javascript', src='./assets/js/jquery-3.2.1.min.js')
			script(type='text/javascript', src='./assets/scripts/utils.js')

	body
		header
			.header-container
				.logo
					a(href='./')
						img(alt='logo', src='./assets/img/logo.svg', title='Accueil')
				nav
					ul
						if active == "accueil"
							li.active
								a(href='./') Accueil
							li
								a(href='./produits') Produits
							li
								a(href='./contact') Contact

						else if active == "produits"
							li
								a(href='./') Accueil
							li.active
								a(href='./produits') Produits
							li
								a(href='./contact') Contact
						else if active == "contact"
							li
								a(href='./') Accueil
							li
								a(href='./produits') Produits
							li.active
								a(href='./contact') Contact
						else
							li
								a(href='./') Accueil
							li
								a(href='./produits') Produits
							li
								a(href='./contact') Contact
															
						li
							a.shopping-cart(href='./panier', title='Panier')
								span.fa-stack.fa-lg
									i.fa.fa-circle.fa-stack-2x.fa-inverse
									i.fa.fa-shopping-cart.fa-stack-1x
								span.count 3					
		block content

		footer
			p Par Antoine Breton et Jos√© Apari-Pantigozo
	block scripts
		script(type='text/javascript', src='./assets/scripts/shopping-cart.service.js')
		script(type='text/javascript', src='./assets/scripts/shopping-cart.controller.js')